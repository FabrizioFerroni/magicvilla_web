
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["exitoso"] != null)
{
       <script>
               Swal.fire({
                  position: 'center',
                  icon: 'success',
                  customClass: 'outnone',
                  title: 'Éxito!',
                  text: '@TempData["exitoso"]',
                  showConfirmButton: false,
                  timer: 3000
                });

       </script>
}

@if (TempData["error"] != null)
{
        <script>
            Swal.fire({
                    position: 'center',
                icon: 'error',
                title: 'Oopss... hubo un error!',
                text: '@TempData["error"]',
                customClass: 'outnone',
                showConfirmButton: false,
                timer: 3000
            });

        </script>
}