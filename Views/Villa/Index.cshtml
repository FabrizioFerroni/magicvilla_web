@model IEnumerable<MagicVilla_MVC.Models.Dto.VillaDto>
@{
    ViewData["Title"] = "Villa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
 <div class="row pb-2">
   <div class="col">
      <h1 class="text-primary">Lista de Villas</h1>
   </div>
   <div class="col text-end pt-1">
    <a asp-controller="Villa" asp-action="Crear" class="btn btn-outline-success outnone"><i class="bi bi-plus-square-fill"></i> Crear Nueva Villa</a>
   </div>
  </div>

    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Ocupantes</th>
          <th>Tarifa</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
            @foreach (var item in Model)
            {
                         <tr>
                           <td>@item.Nombre</td>
                           <td>@item.Ocupantes</td>
                           <td>@((item.Tarifa).ToString("c"))</td>
                           <td>
                                 <a asp-controller="Villa" asp-action="Actualizar" asp-route-id="@item.Id" class="btn btn-info text-white outnone"><i class="bi bi-pencil-square"></i> </a>
                                     <a asp-controller="Villa" asp-action="Remover" asp-route-id="@item.Id" class="btn btn-danger outnone"><i class="bi bi-trash-fill"></i> </a>
                                    </td>
                                </tr>
            }
        </tbody>
    </table>

</div>

