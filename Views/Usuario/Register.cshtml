@model MagicVilla_MVC.Models.Dto.RegistroRequestDto;
@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1 class="text-primary">Registrarse</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
           
            <div class="col-6 form-floating offset-3 pb-2">
                <input asp-for="Nombre" class="form-control outnone" placeholder="Nombre">
                <label class="form-label text-primary ms-2">Nombre</label>
            </div>
            <div class="col-6 form-floating offset-3 pb-2">
                <input asp-for="Apellido" class="form-control outnone" placeholder="Apellido">
                <label class="form-label text-primary ms-2">Apellido</label>
            </div>
            <div class="col-6 form-floating offset-3 pb-2">
                <input asp-for="Email" class="form-control outnone" placeholder="Email">
                <label class="form-label text-primary ms-2">Email</label>
            </div>
             <div class="col-6 form-floating offset-3 pb-2">
                <input asp-for="UserName" class="form-control outnone" placeholder="Usuario">
                <label class="form-label text-primary ms-2">Usuario</label>
            </div>
            <div class="col-6 form-floating offset-3 pb-2">
                <input asp-for="Password" type="password" class="form-control outnone" placeholder="Contraseña">
                <label class="form-label text-primary ms-2">Contraseña</label>
            </div>

            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-primary outnone" value="Submit">Registrarse</button>
            </div>            
        </div>
    </div>


</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}