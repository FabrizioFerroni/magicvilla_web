@model MagicVilla_MVC.Models.Dto.LoginRequestDto;

@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1 class="text-primary text-decoration-none">Iniciar Sesion</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger list-unstyled "></div>
        </div>
        <div class="row">
            <div class="col-6 form-floating offset-3 pb-2">
                <input asp-for="UserName" class="form-control outnone" placeholder="Usuario">
                <label class="form-label text-primary ms-2">Usuario</label>
            </div>          
            <div class="col-6 form-floating offset-3 pb-2">
                <input asp-for="Password" type="password" class="form-control outnone" placeholder="Contraseña">
                <label class="form-label text-primary ms-2">Contraseña</label>
            </div>

            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-primary outnone" value="Submit">Iniciar Sesion</button>
            </div>            
        </div>
    </div>


</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}