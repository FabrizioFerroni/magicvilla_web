@model MagicVilla_MVC.Models.ViewModel.NumeroVillaViewModel

@{
    ViewData["Title"] = "Crear Numero de Villa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Crear">
    <div class="container border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>


        <div class="row">
            <h2 class="text-info">Crear Numero de Villa</h2>
        </div>

        <div class="row mt-2">
            <div class="col-12">
                <label class="form-label">Numero de Villa</label>
                <input asp-for="NumeroVilla.VillaNro" class="form-control outnone" placeholder="Ingrese el numero de la villa" />
                <span asp-validation-for="NumeroVilla.VillaNro" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-12">
                <label class="form-label">Villa</label>
                <select asp-for="NumeroVilla.VillaId" class="form-select outnone" asp-items="@Model.VillaList">
                    <option value="" selected disabled readonly>Seleccione una Villa</option>
                </select>
                <span asp-validation-for="NumeroVilla.VillaId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-12">
                <label class="form-label">Detalle Especial</label>
                <textarea asp-for="NumeroVilla.DetalleEspecial" class="form-control outnone" placeholder="Ingrese el detalle de la villa"></textarea>
                <span asp-validation-for="NumeroVilla.DetalleEspecial" class="text-danger"></span>

            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary outnone">Grabar</button>
            <a asp-controller="NumeroVilla" asp-action="Index" class="btn btn-success outnone">Regresar</a>
        </div>

    </div>
</form>
