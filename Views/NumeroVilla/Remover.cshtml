@model MagicVilla_MVC.Models.ViewModel.NumeroVillaDeleteViewModel
@{
    ViewData["Title"] = "Remover Numero De Villa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="RemoverNumeroVilla">
    <div class="container border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <input asp-for="NumeroVilla.VillaNro" hidden />

        <div class="card w-100 mb-3 border-0">
  <div class="card-body text-center">
    <h5 class="card-title">¿Estas seguro que quieres eliminar esta Villa?</h5>
    <p class="card-text">Mira que una vez que le des remover no podras volver atras.</p>
     <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-danger outnone">Remover</button>
            <a asp-controller="NumeroVilla" asp-action="Index" class="btn btn-secondary outnone">Regresar</a>
        </div>
  </div>
</div>




    </div>

</form>


@section Scripts {
                <partial name="_ValidationScriptsPartial" />
}



